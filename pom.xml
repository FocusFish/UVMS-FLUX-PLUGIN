<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fish.focus.uvms.maven</groupId>
		<artifactId>uvms-pom</artifactId>
		<relativePath />
		<version>1.9</version>
	</parent>

    <groupId>eu.europa.ec.fisheries.uvms.plugins</groupId>
    <artifactId>flux</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <description>Plugin template</description>
    
    <properties>
        <swagger.version>1.3.1</swagger.version>
        <uvms.common.version>2.0.27</uvms.common.version>
        <connector-bridge.client.version>1.0.4</connector-bridge.client.version>
        <bridge-connector.client.version>1.0.4</bridge-connector.client.version>
        <flux.movement.client.version>2.0.1-SNAPSHOT</flux.movement.client.version>
        <exchange.model.version>3.0.7</exchange.model.version>
        <exchange.classifier>date</exchange.classifier>

        <jodatime.version>2.9.9</jodatime.version>
        <release.branch.name>release-2.1.2-legolas</release.branch.name>
        <project.scm.id>github</project.scm.id>
    </properties>
    
    <dependencies>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.fisheries.uvms.exchange</groupId>
            <artifactId>exchange-model</artifactId>
            <version>${exchange.model.version}</version>
            <classifier>${exchange.classifier}</classifier>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>focus-repo</id>
            <name>Focus nexus repository</name>
            <url>http://nexus.focus.fish/nexus/</url>
        </repository>
    </repositories>
    
    <distributionManagement> 
        <repository>
            <id>focus-releases</id>
            <name>UnionVms Repository</name>
            <url>http://nexus.focus.fish/nexus/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>focus-snapshots</id>
            <name>UnionVms Snapshot Repository</name>
            <url>http://nexus.focus.fish/nexus/content/repositories/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>scm:git:https://github.com/UnionVMS/UVMS-FLUX-PLUGIN.git</connection>
        <tag>HEAD</tag>
    </scm>
        
    <modules>
        <module>service</module>
        <module>module</module>
    </modules>
</project>